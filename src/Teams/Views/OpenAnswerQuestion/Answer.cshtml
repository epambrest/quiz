@model Teams.Models.OpenAnswerQuestionModel
@{
    ViewData["Title"] = "Answers";
}

<style>
    .success{       
        border: 3px solid green;      
    }
    .fail{
        border: 3px solid red;
    }
</style>

<div>
    <h3>
        @Model.Question
    </h3>

    <input type="text" readonly name="answer" class="@(Model.IsAnswer ? "success" : "fail")" value='@Model.Answer' />
</div>