@model Teams.Models.OpenAnswerQuestionModel
@{
    ViewBag.Title = "Delete question";
}

<div>
    <dl class="dl-horizontal">
        <dt>Question</dt>
        <dd>
            @Html.DisplayFor(model => model.Question)
        </dd>

        <dt>Answer</dt>
        <dd>
            @Html.DisplayFor(model => model.Answer)
        </dd>
    </dl>

    <div>
        <form asp-controller="OpenQuestionCreate" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>
    </div>
</div>
