@model Teams.Domain.DTO_Models.TestDTO

<input type="hidden" id="questionListJson" value='@Html.Raw(Json.Serialize(Model.Questions))' />

@for (int i = 0; i < Model.Questions.Count; i++) { <tr id="@Model.Questions[i].Id" name="trMain">
        <td>
            <label>@Model.Questions[i].Text</label>
            <input type="hidden" asp-for="@Model.Questions[i].Text" />
        </td>
        <td align="right">
            <input type="hidden" asp-for="@Model.Questions[i].Id" />
            <input type="button" value="Delete" id="@Model.Questions[i].Id" name="deleteQuestion" class="btn btn-danger delete" />
        </td>
    </tr>
}
